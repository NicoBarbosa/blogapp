<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
  <div class="card mt-2">
    <div class="card-body">
      <small>Data: {{data}}</small>
      <h3>{{titulo}}</h3>
      <small>Slug: {{slug}}</small>
      <br>
      <small>Categoria: {{categoria.nome}}</small>
      <p>Descrição: {{descricao}}</p>
      <p>Conteúdo: {{conteudo}}</p>
      <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
      <form action="/admin/postagens/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
      </form>
    </div>
  </div>
{{else}}
  <div class="container">
    <h3>Nenhuma postagem encontrada!</h3>
  </div>
{{/each}}