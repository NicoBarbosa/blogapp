{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Crie sua conta</h3>
<div class="card">
  <div class="card-body">
    <form action="" method="post">
      <label for="nome">Nome: </label>
        <input type="text" name="nome" class="form-control" required placeholder="Seu nome completo aqui">
      <label for="email">Email: </label>
        <input type="email" name="email" class="form-control" required placeholder="Seu melhor email aqui">
      <label for="senha">Senha: </label>
        <input type="password" name="senha" class="form-control" required placeholder="Digite uma senha forte">
      <label for="senha2">Repita a senha: </label>
        <input type="password" name="senha2" class="form-control" required placeholder="Digite novamente a seua senha">
        <button type="submit" class="btn btn-success mt-2">Criar conta</button>
    </form>
  </div>
</div>